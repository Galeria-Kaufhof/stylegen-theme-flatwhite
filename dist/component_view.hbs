
  <article id="component-{{id}}">
    <header>
      <h2 class="sgfw-h2">{{headline}}</h2>
    </header>


    {{#if docs.0.label}}
      <div class="sgfw-tabs">
        {{#if docs.1.label}}
          <nav class="sgfw-tabs-nav">
            <ul class="sgfw-list sgfw-tabs-nav-list">
              {{#each docs}}
                <li class="sgfw-list-item sgfw-tabs-nav-item {{#if @first}}active{{/if}}">
                  <a href="#{{../id}}-{{label}}" class="sgfw-tabs-nav-link {{#if @first}}active{{/if}}">{{label}}</a>
                </li>
              {{/each}}
            </ul>
          </nav>
        {{/if}}

        {{#each docs}}
          <div class="sgfw-markdown-container sgfw-tabs-item {{#if @first}}active{{/if}}" id="{{../id}}-{{label}}">
              {{{content}}}
          </div>
        {{/each}}
      </div>
    {{/if}}

    {{#unless states}}
      {{! just show the default template }}
      <div class="sgfw-preview">
        {{{template}}}
      </div>

      <div class="sgfw-code">
        <code class="sgfw-code-language">{{template}}</code>
      </div>
    {{else}}
      {{! show the rendering of each modifier (default view should be configured as a modifier, if it should be listed too) }}
      {{#each states as |state| }}
        <div class="sgfw-state">

          <h3 class="sgfw-h3 sgfw-state-headline">{{state.label}}</h3>

          {{#if state.doc}}
            <p class="sgfw-copy">{{{state.doc}}}</p>
          {{/if}}

          <div class="sgfw-preview">
            {{#each state.content as |c| }}
              <div class="sgfw-preview-state-variant">
                {{{c}}}
              </div>
            {{/each}}
          </div>

        </div>
      {{/each}}

    {{/unless}}

  </article>
