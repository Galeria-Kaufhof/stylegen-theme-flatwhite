
  <article id="component-{{id}}">
    <header>
      <h2>{{headline}}</h2>
    </header>


    <ul>
      {{#each docs}}
          <li><a href="#{{../id}}-{{label}}" class=" {{#if @first}}active{{/if}}">{{label}}</a></li>
      {{/each}}
    </ul>

    {{#each docs}}
      <div class="{{#if @first}}active{{/if}}" id="{{../id}}-{{label}}">
          {{{content}}}
      </div>
    {{/each}}

    <!-- <div id="{{id}}-config">
      <dl>
        <dd>ID:</dd>
