
  <article id="component-{{id}}">
    <header>
      <h2 class="sgfw-h2">{{headline}}</h2>
    </header>


    {{#if docs.0.label}}
      <div class="sgfw-tabs">
        {{#if docs.1.label}}
          <nav class="sgfw-tabs-nav">
            <ul class="sgfw-list sgfw-tabs-nav-list">
              {{#each docs}}
                <li class="sgfw-list-item sgfw-tabs-nav-item {{#if @first}}active{{/if}}">
                  <a href="#{{../id}}-{{label}}" class="sgfw-tabs-nav-link">{{label}}</a>
                </li>
              {{/each}}
            </ul>
          </nav>
        {{/if}}

        {{#each docs}}
          <div class="sgfw-markdown-container sgfw-tabs-item {{#if @first}}active{{/if}}" id="{{../id}}-{{label}}">
              {{{content}}}
          </div>
        {{/each}}
      </div>
    {{/if}}

    {{#unless states}}

      <div class="sgfw-tabs">
        <nav class="sgfw-tabs-nav">
          <ul class="sgfw-list sgfw-tabs-nav-list">
            <li class="sgfw-list-item sgfw-tabs-nav-item active">
              <a href="#{{slug}}-preview" class="sgfw-tabs-nav-link">Preview</a>
            </li>
            <li class="sgfw-list-item sgfw-tabs-nav-item">
              <a href="#{{slug}}-code-example" class="sgfw-tabs-nav-link">Code</a>
            </li>
          </ul>
        </nav>
        {{! just show the default template }}
        <div class="sgfw-preview sgfw-tabs-item active" id="{{slug}}-preview">
          {{{template}}}
        </div>

        <div class="sgfw-code sgfw-tabs-item" id="{{slug}}-code-example">
          <pre><code class="language-html">{{template}}</code></pre>
        </div>
      </div>

    {{else}}
      {{! show the rendering of each modifier (default view should be configured as a modifier, if it should be listed too) }}
      {{#each states as |state| }}
        <div class="sgfw-state">

          <h3 class="sgfw-h3 sgfw-state-headline">{{state.label}}</h3>

          {{#if state.doc}}
            <div class="sgfw-copy">{{{state.doc}}}</div>
          {{/if}}

          <div class="sgfw-tabs">
            <nav class="sgfw-tabs-nav">
              <ul class="sgfw-list sgfw-tabs-nav-list">
                <li class="sgfw-list-item sgfw-tabs-nav-item active">
                  <a href="#{{state.slug}}-preview" class="sgfw-tabs-nav-link">Preview</a>
                </li>
                <li class="sgfw-list-item sgfw-tabs-nav-item">
                  <a href="#{{state.slug}}-code-example" class="sgfw-tabs-nav-link">Code</a>
                </li>
              </ul>
            </nav>
            <div class="sgfw-tabs-item active" id="{{state.slug}}-preview">
              {{#each state.content as |c| }}
                <div class="sgfw-preview sgfw-preview-state-variant">
                  {{{c}}}
                </div>
              {{/each}}
            </div>

            <div class="sgfw-code sgfw-tabs-item" id="{{state.slug}}-code-example">
              <pre class="sgfw-preview-state-variant-code">{{#each state.content as |c| }}<code class="language-html">{{c}}</code>{{/each}}</pre>
            </div>
          </div>

        </div>
      {{/each}}

    {{/unless}}

  </article>
