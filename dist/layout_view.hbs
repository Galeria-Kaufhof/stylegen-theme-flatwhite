<!DOCTYPE html>
<html lang="en" class="sg-flatwhite">
<head>
  <meta charset="UTF-8">
  <title>Styleguide</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/stylegen-assets/vendor/prism-6d14265e81.css">
  <link rel="stylesheet" href="/stylegen-assets/styles/stylegen-flatwhite-7dbaa98258.css">

  <!-- TODO: make css deps more dynamic, maybe allow tag reference here -->
  {{#each cssDeps}}
    <link rel="stylesheet" href="{{this}}">
  {{/each}}

  {{#if head}}
    <!-- SYLEGEN: dependencies.templates.head -->
    {{{ head }}}
    <!-- SYLEGEN: dependencies.templates.head (end) -->
  {{else}}
    <!-- SYLEGEN: dependencies.templates.head NO DEPS -->
  {{/if}}

  <!-- TODO: allow head js tags -->
</head>
<body>
  <header class="sgfw-header">
    <h1 class="sgfw-h1">Styleguide</h1>
  </header>

  <div class="sgfw-content-wrapper">
    <nav class="sgfw-nav test-stylegen-main-nav">
      {{#*inline "sg.main-link-item"}}
        <li class="sgfw-nav-item sgfw-list-item">
          <a class="sgfw-nav-link" href="{{link}}">{{label}}</a>
          {{#if children}}
            <ul class="sgfw-nav-children test-stylegen-children">
              {{> sg.main-link-list children}}
            </ul>
          {{/if}}
        </li>
      {{/inline}}

      <ul class="sgfw-nav-list sgfw-list">
        {{#*inline "sg.main-link-list"}}
          {{#each this}}
            {{> sg.main-link-item}}
          {{/each}}
        {{/inline}}

        {{> sg.main-link-list pages }}
      </ul>
    </nav>

    <main class="sgfw-content">
      {{{content}}}
    </main>
  </div>
  {{#each jsDeps}}
    <script src="{{this}}"></script>
  {{/each}}

  {{#if bottom}}
    <!-- SYLEGEN: dependencies.templates.bottom -->
    {{{ bottom }}}
    <!-- SYLEGEN: dependencies.templates.bottom (end) -->
  {{else}}
    <!-- SYLEGEN: dependencies.templates.bottom NO DEPS -->
  {{/if}}

  <script>window.jQuery || document.write('<script src="/stylegen-assets/vendor/jquery-56f1d01ee4.js"><\/script>')</script>
  <script src="/stylegen-assets/vendor/prism-503b810d8a.js"></script>
  <script src="/stylegen-assets/scripts/stylegen-flatwhite-9c4b121251.js"></script>
</body>
</html>
