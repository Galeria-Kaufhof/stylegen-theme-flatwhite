/* Setup */
html.sg-flatwhite
  /* Change default typefaces here */
  font-family serif
  font-size 100%
  -webkit-font-smoothing antialiased

/* Copy & Lists */
p.sgfw-copy, .sgfw-markdown-container p
  line-height 1.5rem
  margin-top 1.5rem
  margin-bottom 0

ul.sgfw-list, .sgfw-markdown-container ul,
ol.sgfw-list, .sgfw-markdown-container ol
  margin-top 1.5rem
  margin-bottom 1.5rem

ul.sgfw-list li.sgfw-list-item, .sgfw-markdown-container ul li,
ol.sgfw-list li.sgfw-list-item, .sgfw-markdown-container ol li
  line-height 1.5rem

ul.sgfw-list ul.sgfw-list, .sgfw-markdown-container ul ul,
ol.sgfw-list ul.sgfw-list, .sgfw-markdown-container ol ul,
ul.sgfw-list ol.sgfw-list, .sgfw-markdown-container ul ol,
ol.sgfw-list ol.sgfw-list, .sgfw-markdown-container ol ol
  margin-top 0
  margin-bottom 0

blockquote.sgfw-quote, .sgfw-markdown-container blockquote
  line-height 1.5rem
  margin-top 1.5rem
  margin-bottom 1.5rem

/* Headings */
h1.sgfw-h1, .sgfw-markdown-container h1,
h2.sgfw-h2, .sgfw-markdown-container h2,
h3.sgfw-h3, .sgfw-markdown-container h3,
h4.sgfw-h4, .sgfw-markdown-container h4,
h5.sgfw-h5, .sgfw-markdown-container h5,
h6.sgfw-h6, .sgfw-markdown-container h6
  /* Change heading typefaces here */
  font-family sans-serif
  margin-top 1.5rem
  margin-bottom 0
  line-height 1.5rem

h1.sgfw-h1, .sgfw-markdown-container h1
  font-size 4.242rem
  line-height 4.5rem
  margin-top 3rem

h2.sgfw-h2, .sgfw-markdown-container h2
  font-size 2.828rem
  line-height 3rem
  margin-top 3rem

h3.sgfw-h3, .sgfw-markdown-container h3
  font-size 1.414rem

h4.sgfw-h4, .sgfw-markdown-container h4
  font-size 0.707rem

h5.sgfw-h5, .sgfw-markdown-container h5
  font-size 0.4713333333333333rem

h6.sgfw-h6, .sgfw-markdown-container h6
  font-size 0.3535rem

/* Tables */
table.sgfw-table, .sgfw-markdown-container table
  margin-top 1.5rem
  border-spacing 0px
  border-collapse collapse

table.sgfw-table td.sgfw-table-td, .sgfw-markdown-container table td,
table.sgfw-table th.sgfw-table-th, .sgfw-markdown-container table th
  padding 0
  line-height 33px

/* Code blocks */
code.sgfw-code, .sgfw-markdown-container code
  vertical-align bottom

